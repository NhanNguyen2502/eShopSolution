@model eShopSolution.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "RolesAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<hr />
<div class="container-fluid px-4">
    <div class="card mb-4">
    </div>
    <div class="card mb-4">

        <div class="card-body">
            <form asp-action="RolesAssign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                @for (var i = 0; i < Model.Roles.Count; i++)
                {
            <div class="form-group">
                @Model.Roles[i].Name
                <input type="checkbox" asp-for="Roles[i].Selected" />
                <input type="hidden" asp-for="Roles[i].Id" />
                <input type="hidden" asp-for="Roles[i].Name" />
            </div>
                }

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>