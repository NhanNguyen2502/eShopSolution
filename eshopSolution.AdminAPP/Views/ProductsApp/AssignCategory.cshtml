@model eShopSolution.ViewModels.Catalog.Product.CategoryAssignRequest

@{
    ViewData["Title"] = "AssignCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AssignCategory</h1>

<h4>CategoryAssignRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="id" type="hidden" />
            @for (var i = 0; i < Model.Categories.Count(); i++)
            {
                <div class="form-group">
                    @Model.Categories[i].Name
                    <input type="checkbox" asp-for="Categories[i].Selected" />
                    <input type="hidden" asp-for="Categories[i].Id" />
                    <input type="hidden" asp-for="Categories[i].Name" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>