@model eShopSolution.ViewModels.Catalog.Product.ProductUpdateRequest

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1>Update Product</h1>
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <table class="table table-bordered" style="width:auto">
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="Name" class="control-label"></label>
                        </th>
                        <td class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>


                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="NeworOriginalPrice" class="control-label"></label>
                        </th>
                        <td class="col-sm-10">
                            <input asp-for="NeworOriginalPrice" class="form-control" type="number" />
                            <span asp-validation-for="NeworOriginalPrice" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="NewPrice" class="control-label"></label>
                        </th>
                        <td class="col-sm-10">
                            <input asp-for="NewPrice" class="form-control" type="number"/>
                            <span asp-validation-for="NewPrice" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="Stock" class="control-label"></label>

                        </th>
                        <td class="col-sm-10">
                            <input asp-for="Stock" class="form-control" type="number" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="Description" class="control-label"></label>

                        </th>
                        <td class="col-sm-10">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="SeoTitle" class="control-label"></label>

                        </th>
                        <td class="col-sm-10">
                            <input asp-for="SeoTitle" class="form-control" />
                            <span asp-validation-for="SeoTitle" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>

